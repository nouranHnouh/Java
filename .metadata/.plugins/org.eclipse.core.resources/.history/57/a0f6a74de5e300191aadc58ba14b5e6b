
import java.util.*; 

public class SalesCalculatorTest {

	public static void main(String[] args) {
		
		double value;
		int itemCounter=0;
		Scanner scan=new Scanner(System.in);
		SalesCalculator saleCalc=new SalesCalculator();
		
		System.out.print("Enter total value of sold item or -1 to quit: ");
		value=scan.nextDouble();
		while(value !=-1) {
			saleCalc.setValue(value);
			itemCounter++;
			System.out.print("Enter total value of sold item or -1 to quit: ");
			value=scan.nextDouble();
			saleCalc.setValue(value);
			itemCounter++;
			System.out.printf("item %n%d \t\t value %.2f%n",itemCounter,value);
			
			
			
			
		}
		
		System.out.printf("the gross sale for this week is: %.2f", saleCalc.calcSalesEarning());
		
		

	}

}
