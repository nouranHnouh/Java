
import java.util.*; 

public class SalesCalculatorTest {

	public static void main(String[] args) {
		int item=0 ;
		double value;
		char c='y';
		Scanner scan=new Scanner(System.in);
		SalesCalculator saleCalc=new SalesCalculator();
		
		
		while(c !='n') {
			System.out.print("Enter item value: ");
			value=scan.nextDouble();
			saleCalc.setValue(value);
			item++;
			System.out.printf("item %n%d \t\t value %.2f%n",item,value);
			System.out.println("\nEnter another item value (y/n) :"); 
			c=scan.next().charAt(0); 
			
			
		}
		
		System.out.printf("the gross sale for this weak is: %.2f", saleCalc.calcSalesEarning());
		
		

	}

}
